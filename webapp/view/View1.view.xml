<mvc:View
    controllerName="sap1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    class="sapUiSizeCompact"
>
    <Page id="page" title="{i18n>accountdetails}">
    <headerContent>
        <Select forceSelection="true" change="onchangelag">
        <core:ListItem key="en" text="Engish"></core:ListItem>
        <core:ListItem key="es" text="Spanish"></core:ListItem>
        <core:ListItem key="de" text="German"></core:ListItem>
        </Select>
        <Button text="Spanish" press="onspanish"/>

        </headerContent>
        <content>
        <core:Fragment id="bank-details" fragmentName="sap1.view.fragments.BankDetails" type="XML"/>
        <core:Fragment id="card-details" fragmentName ="sap1.view.fragments.CardDetails" type="XML"/>
        </content>

        
        
    </Page>
</mvc:View>
