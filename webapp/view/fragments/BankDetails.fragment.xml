<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
        
        <Panel expandable="false"  width="auto" class="sapUiResponsiveMargin">
        	<!-- headerText="{i18n>accountdetails}" for future development it is removed -->
            <content>
            <HBox >
            <Avatar
							src="{/profile}"
							displaySize="XL"
							showBorder="true"
							press="onPress"/>
        <VBox class="sapUiSmallMargin sapUiLargeMarginBegin">
                <HBox>
                    <Label text="{i18n>accountnumber}"  class="sapUiMediumMarginEnd"/>
                    <Text text="{oBankdetails>/bankdetails/accountnum}" />
                </HBox>
                <HBox>
                    <Label text="{i18n>accountname}" class="sapUiMediumMarginEnd" />
                    <Text text="{oBankdetails>/bankdetails/holdername}" />
                </HBox>
                <HBox>
                    <Label text="{i18n>ifsc}" class="sapUiMediumMarginEnd" />
                    <Text text="{oBankdetails>/ifsccode}" />
                </HBox>
                <HBox>
                    <Button icon="sap-icon://information"  type="Neutral" press="findmoredetails" text="{i18n>findmoredetail}"></Button>
                </HBox>
            </VBox>
            </HBox> 
            </content>
            </Panel>
       
</core:FragmentDefinition>